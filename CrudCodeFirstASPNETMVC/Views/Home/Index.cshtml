@model IEnumerable<CrudCodeFirstASPNETMVC.Models.Movies>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2>Movie List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Plot</th>
                <th>Poster</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>john@example.com</td>
                </tr>
            }
        </tbody>
    </table>
</div>